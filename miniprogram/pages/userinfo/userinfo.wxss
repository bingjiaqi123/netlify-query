/* pages/userinfo/userinfo.wxss */
.container {
  padding: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部安全区域和返回按钮 */
.safe-header {
  height: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: flex-start;
  padding: 24rpx 24rpx 0 24rpx;
}

.back-btn {
  position: fixed;
  top: 80rpx;
  left: 24rpx;
  background: #007aff;
  color: #fff;
  border: none;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  font-size: 36rpx;
  z-index: 100;
  min-height: 80rpx;
}

/* 内容区域 */
.section {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 40rpx;
  margin-top: 60rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 24rpx;
  text-align: center;
}

.info-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 40rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #7f8c8d;
}

.value {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

/* 昵称容器 */
.nickname-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

/* 编辑按钮 */
.edit-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(52, 152, 219, 0.2);
  border: 2rpx solid rgba(52, 152, 219, 0.3);
  transition: all 0.3s ease;
}

.edit-btn:active {
  background: rgba(52, 152, 219, 0.3);
  transform: scale(0.9);
  box-shadow: 0 2rpx 8rpx rgba(52, 152, 219, 0.4);
}

.edit-icon {
  font-size: 24rpx;
  line-height: 1;
}

/* 底部返回按钮 */
.bottom-section {
  padding: 40rpx;
  padding-bottom: 60rpx;
}

.back-button {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  color: #2c3e50;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.back-button:active {
  background: rgba(255, 255, 255, 0.8);
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
} 
