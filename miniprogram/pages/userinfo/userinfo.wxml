<!--pages/userinfo/userinfo.wxml-->
<view class="container">
  <!-- 顶部安全区域和返回按钮 -->
  <view class="safe-header">
    <button class="back-btn" bindtap="goBack">返回</button>
  </view>

  <!-- 用户信息 -->
  <view class="section">
    <text class="section-title">用户信息</text>
    <view class="info-card">
      <view class="info-item">
        <text class="label">用户昵称：</text>
        <view class="nickname-container">
          <text class="value">{{userInfo.nickName}}</text>
          <view class="edit-btn" bindtap="editNickname">
            <text class="edit-icon">✏️</text>
          </view>
        </view>
      </view>
      <view class="info-item">
        <text class="label">设备ID：</text>
        <text class="value">{{userInfo.deviceId}}</text>
      </view>
      <view class="info-item">
        <text class="label">创建时间：</text>
        <text class="value">{{userInfo.createTime}}</text>
      </view>
    </view>
  </view>
</view> 