<view class="container">
  <!-- 顶部导航 -->
  <top-header goBack="{{true}}" />
  
  <!-- 页面标题 -->
  <view class="page-title">
    <text>交易所</text>
  </view>
  
  <!-- 商品网格 -->
  <view class="products-grid">
    <!-- 第一行 -->
    <view class="product-row">
      <!-- 大心愿卡 - 铜币购买 -->
      <view class="product-card" bindtap="buyBigLove" data-currency="coin">
        <image class="product-image" src="/images/biglove.png" mode="aspectFit" />
        <view class="product-info">
          <text class="product-name">大心愿卡</text>
          <view class="price-row">
            <text class="price">100000</text>
            <image class="currency-icon" src="/images/coin.png" mode="aspectFit" />
          </view>
        </view>
      </view>
      
      <!-- 大心愿卡 - 钻石购买 -->
      <view class="product-card" bindtap="buyBigLove" data-currency="diamond">
        <image class="product-image" src="/images/biglove.png" mode="aspectFit" />
        <view class="product-info">
          <text class="product-name">大心愿卡</text>
          <view class="price-row">
            <text class="price">5000</text>
            <image class="currency-icon" src="/images/diamond.png" mode="aspectFit" />
          </view>
        </view>
      </view>
    </view>
    
    <!-- 第二行 -->
    <view class="product-row">
      <!-- 小心愿卡 - 铜币购买 -->
      <view class="product-card" bindtap="buyTinyLove" data-currency="coin">
        <image class="product-image" src="/images/tinylove.png" mode="aspectFit" />
        <view class="product-info">
          <text class="product-name">小心愿卡</text>
          <view class="price-row">
            <text class="price">10000</text>
            <image class="currency-icon" src="/images/coin.png" mode="aspectFit" />
          </view>
        </view>
      </view>
      
      <!-- 小心愿卡 - 钻石购买 -->
      <view class="product-card" bindtap="buyTinyLove" data-currency="diamond">
        <image class="product-image" src="/images/tinylove.png" mode="aspectFit" />
        <view class="product-info">
          <text class="product-name">小心愿卡</text>
          <view class="price-row">
            <text class="price">500</text>
            <image class="currency-icon" src="/images/diamond.png" mode="aspectFit" />
          </view>
        </view>
      </view>
    </view>
  </view>
</view> 