/* pages/generals/generals.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
  box-sizing: border-box;
  overflow-x: hidden;
}

/* 页面标题 */
.header {
  text-align: center;
  margin-bottom: 30rpx;
  margin-top: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.generals-list {
  flex: 1;
  margin-bottom: 120rpx;
  overflow-x: hidden;
}

.general-card {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
  flex-wrap: wrap;
  overflow: hidden;
}

.general-avatar {
  position: relative;
  flex-shrink: 0;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #ff6b6b, #feca57);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.rarity-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: #ff6b6b;
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  font-weight: bold;
}

.general-info {
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

.general-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.general-details {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.general-force {
  font-size: 24rpx;
  font-weight: 500;
  background: #fff;
  border-radius: 16rpx;
  padding: 2rpx 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
  border: 1rpx solid rgba(0,0,0,0.04);
  margin-right: 4rpx;
  /* 保持文字颜色为原本的势力色 */
}

.general-role {
  font-size: 24rpx;
  font-weight: 500;
}

.separator {
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
}

.general-level {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
}

/* 技能区域（中间） */
.general-skills {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  min-width: 0;
  max-width: 320rpx;
  word-break: break-all;
  overflow: hidden;
}

.skill-tag {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  min-width: 0;
  overflow: hidden;
}

.skill-tag:active {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(0.98);
}

.skill-name {
  font-size: 26rpx;
  color: #ffffff;
  font-weight: 500;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.skill-level {
  font-size: 22rpx;
  font-weight: bold;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.skill-level.active {
  background: rgba(76, 175, 80, 0.8);
  color: #ffffff;
}

.skill-level.inactive {
  background: rgba(158, 158, 158, 0.6);
  color: rgba(255, 255, 255, 0.7);
}

/* 碎片和按钮区域（右边） */
.fragments-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  align-items: flex-end;
  flex-shrink: 0;
  min-width: 100rpx;
  max-width: 140rpx;
  word-break: break-all;
  overflow: hidden;
}

.fragments-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.fragments-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

.fragments-value {
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 0.9);
}

.fragments-value.enough {
  color: #4caf50;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  width: 100%;
}

.action-btn {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  border: none;
  font-weight: bold;
  min-height: auto;
  line-height: 1.2;
  max-width: 120rpx;
  overflow: hidden;
}

.action-btn.active {
  background: linear-gradient(135deg, #4caf50, #45a049);
  color: #ffffff;
}

.action-btn.disabled {
  background: rgba(158, 158, 158, 0.3);
  color: rgba(255, 255, 255, 0.5);
}

.awaken-level {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  padding: 8rpx;
  background: rgba(255, 193, 7, 0.2);
  border-radius: 8rpx;
  border: 1rpx solid rgba(255, 193, 7, 0.3);
  max-width: 120rpx;
  overflow: hidden;
}

.awaken-text {
  font-size: 20rpx;
  color: #ffc107;
  font-weight: bold;
}

.awaken-value {
  font-size: 24rpx;
  color: #ffc107;
  font-weight: bold;
}

.bottom-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}

.back-button {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx;
  width: 100%;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.back-button:active {
  transform: scale(0.98);
} 
