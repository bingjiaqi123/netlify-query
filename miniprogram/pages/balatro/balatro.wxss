/* 乘号黑底 */
.multiply-x {
  background: #000;
  border-radius: 10rpx;
  padding: 0 12rpx;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 24rpx;
  font-weight: bold;
}

/* 复用芯片与倍率标签配色 */
.info-row .chip-label { background: #1976d2; color: #fff; border-radius: 16rpx; padding: 0 14rpx; height: 36rpx; line-height: 36rpx; font-size: 24rpx; }
.info-row .multiplier-label { background: #e53935; color: #fff; border-radius: 16rpx; padding: 0 14rpx; height: 36rpx; line-height: 36rpx; font-size: 24rpx; }

.empty-tip { color: #bbb; text-align: center; padding: 40rpx 0; } 

/* 背包覆盖层与面板，沿用信息面板风格 */
.bag-overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.7);
  z-index: 1400;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bag-panel {
  width: 95%;
  max-width: 800rpx;
  height: 1000rpx;
  background: #2b2b2b;
  color: #eee;
  border-radius: 16rpx;
  overflow: hidden;
  padding: 0;
  display: flex;
  flex-direction: column;
}
.bag-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 20rpx;
  background: #1f1f1f;
}
.gold-in-bag{color:#ffd54f;font-size:28rpx;margin-right:auto}
.bag-title{flex:1;text-align:center;color:#eee}
.use-btn { background: #4CAF50; color: #fff; border: none; }
.sell-btn { background: #e53935; color: #fff; border: none; margin-right: 8rpx; }
.right-actions { display: flex; align-items: center; }
.bag-grid {
  flex: 1;
  padding: 12rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8rpx;
  height: auto;
  max-height: none;
}

.bag-slot {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bag-slot-empty {
  width: 100%;
  height: 100%;
  background: transparent;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bag-planet {
  width: 100%;
  height: 100%;
  background: #fff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid transparent;
}
.planet-vertical {
  writing-mode: vertical-rl;
  text-orientation: mixed;
  display: flex;
  align-items: center;
  justify-content: center;
}
.planet-vertical.small { transform: scale(0.85); }
.vertical-char { color: #333; font-size: 24rpx; line-height: 1.1; }
.level-char { font-weight: bold; } 

/* 背包内星球牌，横向扁条展示 */
.bag-planet { height: 80rpx; background: #fff; border-radius: 12rpx; display: flex; align-items: center; border: 2rpx solid transparent; }
.bag-planet.selected { border-color: #ffd54f; box-shadow: 0 0 12rpx rgba(255, 213, 79, 0.6); }
.planet-inner.small { width: 100%; padding: 0 16rpx; display: flex; align-items: center; justify-content: space-between; }
.planet-type, .planet-level { color: #333; font-size: 28rpx; } 

.bag-toolbar-row1 { padding: 12rpx 20rpx; background: #333; }
.bag-toolbar-row2 { padding: 12rpx 20rpx; background: #333; display: flex; gap: 12rpx; }
.toggle-select-btn { background: #1976d2; color: #fff; border: none; padding: 8rpx 16rpx; font-size: 28rpx; }
.use-btn, .sell-btn { padding: 8rpx 16rpx; font-size: 28rpx; } 

.status-row1{margin-bottom:12rpx}
.status-right .triple text{font-size:30rpx}
.status-row3{margin-top:8rpx;margin-bottom:12rpx}
.status-row3 text{font-size:30rpx}
.status-row5{margin-top:8rpx}
.status-row5 text{font-size:30rpx} 

.status-row4,.status-row5{display:flex;align-items:center;justify-content:space-between;margin-bottom:5rpx}
.status-row4 .row-left,.status-row5 .row-left{display:flex;align-items:center;gap:12rpx;height:40rpx}
.status-row4 .row-right,.status-row5 .row-right{margin-left:auto;display:flex;align-items:center;gap:8rpx;height:40rpx}
.status-row5 .product-label{text-align:right}

/* 统一行内标签高度与行高，避免抖动 */
.normal-style{font-size:28rpx;color:#fff;margin-right:8rpx;height:40rpx;line-height:40rpx}
.shadow-style{font-size:28rpx;color:#fff;background:rgba(255,255,255,0.08);padding:0 12rpx;border-radius:12rpx;margin-right:8rpx;box-shadow:0 2rpx 4rpx rgba(0,0,0,0.2);height:40rpx;line-height:40rpx}
.count-hash{height:40rpx;line-height:40rpx}
.count-orange{height:40rpx;line-height:40rpx}

/* 统一乘号、等号与芯片/倍率标签高度 */
.multiply-label{color:#e53935;font-size:32rpx;font-weight:bold;margin-right:8rpx;height:40rpx;line-height:40rpx}
.equals-label{color:#4CAF50;font-size:32rpx;font-weight:bold;margin-right:8rpx;height:40rpx;line-height:40rpx}
.chip-label{background:#1976d2;color:#fff;border-radius:16rpx;padding:0 18rpx;font-size:28rpx;height:40rpx;line-height:40rpx;margin-right:8rpx}
.multiplier-label{background:#e53935;color:#fff;border-radius:16rpx;padding:0 18rpx;font-size:28rpx;height:40rpx;line-height:40rpx;margin-right:12rpx}
.product-label{text-align:right;background:#4CAF50;color:#fff;border-radius:16rpx;padding:0 18rpx;font-size:28rpx;height:40rpx;line-height:40rpx;font-weight:bold}

/* 行文字统一行高 */
.status-row4 text,.status-row5 text{line-height:40rpx}

/* 行间距保持一致 */
.status-row3{margin-top:8rpx;margin-bottom:12rpx}
.status-row4{margin-bottom:8rpx}
.status-row5{margin-top:8rpx}

/* 左侧金币文本在该行内垂直居中 */
.status-row5 .row-left .gold-text{line-height:40rpx}

/* 牌组图层样式 */
.deck-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1500;
}

.deck-panel {
  width: 95%;
  max-width: 800rpx;
  height: 90%;
  background: #2b2b2b;
  color: #eee;
  border-radius: 16rpx;
  overflow: hidden;
  padding: 0;
  display: flex;
  flex-direction: column;
}

.deck-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 20rpx;
  background: #1f1f1f;
}

.deck-body {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.deck-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.deck-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.deck-point-label {
  width: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
}

.deck-cards {
  display: flex;
  align-items: center;
  position: relative;
}

.deck-card {
  width: 80rpx;
  height: 100rpx;
  background: #fff;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  position: relative;
  margin-left: -50rpx;
  transition: all 0.3s ease;
}

.deck-card:first-child {
  margin-left: 0;
}

.deck-card.used {
  background: #e0e0e0;
  border-color: #bbb;
  filter: brightness(0.7);
}

.deck-card-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  width: 100%;
  height: 100%;
  padding: 8rpx 4rpx;
}

.deck-card-suit {
  font-size: 16rpx;
  line-height: 1;
  margin-bottom: 2rpx;
  color: #333;
}

.deck-card-point {
  font-size: 14rpx;
  line-height: 1;
  font-weight: bold;
  color: #333;
} 