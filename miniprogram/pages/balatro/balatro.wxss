/* 提示灯样式 */
.indicator {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ccc; /* 默认灰色 */
  transition: all 0.3s ease;
  box-shadow: 0 0 8rpx rgba(204, 204, 204, 0.6); /* 灰色发光 */
}

.indicator.active {
  background: #f44336; /* 激活时红色 */
  box-shadow: 0 0 12rpx rgba(244, 67, 54, 0.8), 0 0 20rpx rgba(244, 67, 54, 0.4); /* 红色发光效果 */
}

