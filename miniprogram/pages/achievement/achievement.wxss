  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.publish-content {
  background-color: #fff;
  border-radius: 12px;
  width: 90%;
  max-width: 500px;
  max-height: 80vh;
  overflow-y: auto;
}

.publish-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px 20px 0 20px;
  border-bottom: 1px solid #eee;
}

.publish-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

.close-btn {
  font-size: 24px;
  color: #999;
