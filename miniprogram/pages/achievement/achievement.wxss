}

.custom-reward-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 5px;
}

.custom-reward-label {
  font-size: 14px;
  color: #333;
  font-weight: 500;
}

.custom-reward-content {
  padding: 10px;
  background-color: #f8f9fa;
  border-radius: 6px;
}

.custom-input {
  width: 100%;
  padding: 8px 12px;
  border: 1px solid #ddd;
  border-radius: 6px;
  font-size: 14px;
  box-sizing: border-box;
  min-height: 50px;
  max-height: 50px;
  resize: none;
  line-height: 1.4;
}

.publish-footer {
  display: flex;
  gap: 12px;
  padding: 0 20px 15px 20px;
  border-top: 1px solid #eee;
  padding-top: 15px;
}

.cancel-btn, .publish-btn {
  flex: 1;
  padding: 10px;
  border-radius: 6px;
  font-size: 14px;
  border: none;
  cursor: pointer;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.publish-btn {
  background-color: #007aff;
  color: white;
}

.publish-btn:disabled {
  background-color: #ccc;
  color: #999;
  cursor: not-allowed;
}

/* 禁用状态样式 */
