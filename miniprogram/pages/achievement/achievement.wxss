  margin-bottom: 0;
}

.info-label {
  font-size: 14px;
  color: #666;
  min-width: 80px;
  font-weight: 500;
}

.info-value {
  font-size: 14px;
  color: #333;
  font-weight: 600;
  flex: 1;
}

.coin-value {
