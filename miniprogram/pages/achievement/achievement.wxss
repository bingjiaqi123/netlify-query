  padding: 5px;
}

.publish-body {
  padding: 15px 20px;
}

.input-group {
  margin-bottom: 8rpx;
}

.input-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 6rpx;
  display: block;
}

.input-tip {
  display: block;
  font-size: 12px;
  color: #999;
  margin-top: 3px;
  font-style: italic;
}

.title-input {
  width: 100%;
  padding: 8px 12px;
