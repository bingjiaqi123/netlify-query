/* pages/home/home.wxss */
.home-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 24rpx;
  padding-bottom: 120rpx;
  position: relative;
}

/* 用户信息区域 */
.user-info {
  text-align: right;
  margin-bottom: 60rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 16rpx;
  margin-top: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.resources {
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
}

.resource-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 12rpx 20rpx;
  border-radius: 25rpx;
  backdrop-filter: blur(10rpx);
}

.resource-icon {
  width: 32rpx;
  height: 32rpx;
}

.resource-value {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

/* 功能按钮区域 */
.buttons {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 60rpx;
  justify-content: center;
  max-width: 600rpx;
  margin-left: auto;
  margin-right: auto;
}

.btn {
  background: rgba(255, 255, 255, 0.9);
  border: none;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
  text-align: center;
}

.btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 底部栏目 */
.bottom-tabs {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(255, 255, 255, 0.3);
  padding: 16rpx 24rpx;
  display: flex;
  gap: 24rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.tab-btn {
  flex: 1;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  transition: all 0.3s ease;
}

.tab-btn:active {
  transform: scale(0.95);
}

.tab-text {
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
} 
