<view class="container">
  <!-- 顶部安全区域和返回按钮 -->
  <view class="safe-header">
    <button class="back-btn" bindtap="goBack">返回</button>
  </view>
  
  <view class="mode-section">
    <text class="section-title">游戏模式</text>
    <view class="mode-grid">
      <button class="mode-btn {{selectedMode === 'classic' ? 'selected' : ''}}" bindtap="selectMode" data-mode="classic">
        <text class="mode-name">经典模式</text>
        <text class="mode-desc">金币6，出牌4，弃牌3</text>
      </button>
      <button class="mode-btn {{selectedMode === 'quick' ? 'selected' : ''}}" bindtap="selectMode" data-mode="quick">
        <text class="mode-name">一气呵成</text>
        <text class="mode-desc">金币6，出牌6，弃牌1</text>
      </button>
      <button class="mode-btn {{selectedMode === 'adventure' ? 'selected' : ''}}" bindtap="selectMode" data-mode="adventure">
        <text class="mode-name">破釜沉舟</text>
        <text class="mode-desc">金币9，出牌1，弃牌6</text>
      </button>
      <button class="mode-btn {{selectedMode === 'rich' ? 'selected' : ''}}" bindtap="selectMode" data-mode="rich">
        <text class="mode-name">有钱任性</text>
        <text class="mode-desc">金币24，出牌3，弃牌2</text>
      </button>
    </view>
  </view>

  <view class="force-section">
    <text class="section-title">选择阵营</text>
    <view class="force-grid">
      <button class="force-btn qun-force {{selectedForce === 'qun' ? 'selected' : ''}}" bindtap="selectForce" data-force="qun">
        <text class="force-name">群势力</text>
      </button>
      <button class="force-btn wei-force {{selectedForce === 'wei' ? 'selected' : ''}}" bindtap="selectForce" data-force="wei">
        <text class="force-name">魏势力</text>
      </button>
      <button class="force-btn shu-force {{selectedForce === 'shu' ? 'selected' : ''}}" bindtap="selectForce" data-force="shu">
        <text class="force-name">蜀势力</text>
      </button>
      <button class="force-btn wu-force {{selectedForce === 'wu' ? 'selected' : ''}}" bindtap="selectForce" data-force="wu">
        <text class="force-name">吴势力</text>
      </button>
    </view>
  </view>

  <view class="bottom-section">
    <button class="enter-game-btn" bindtap="enterGame" disabled="{{!selectedMode || !selectedForce}}">进入游戏</button>
  </view>
</view> 