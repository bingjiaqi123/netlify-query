/* pages/backup/backup.wxss */

.container {
  min-height: 100vh;
  background: #f5f7fb;
  padding: 24rpx;
  box-sizing: border-box;
}

/* 顶部安全区域和返回按钮（参考设置页） */
.safe-header {
  height: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: flex-start;
  padding: 24rpx 24rpx 0 24rpx;
}

.back-btn {
  position: fixed;
  top: 80rpx;
  left: 24rpx;
  background: #007aff;
  color: #fff;
  border: none;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  font-size: 36rpx;
  z-index: 100;
  min-height: 80rpx;
}

.page-header {
  text-align: right;
  margin-bottom: 24rpx;
  padding-right: 24rpx;
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
}

.page-subtitle {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.buttons-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.export-btn, .import-btn {
  flex: 1;
  height: 80rpx;
  border: none;
  border-radius: 12rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
}

.export-btn.daily {
  background: linear-gradient(135deg, #007bff, #0056b3);
}

.export-btn.weekly {
  background: linear-gradient(135deg, #28a745, #20c997);
}

.export-btn.history {
  background: linear-gradient(135deg, #6f42c1, #5a32a3);
}

.import-btn.daily {
  background: linear-gradient(135deg, #ff9800, #f57c00);
}

.import-btn.weekly {
  background: linear-gradient(135deg, #9c27b0, #7b1fa2);
}

.import-btn.history {
  background: linear-gradient(135deg, #e91e63, #c2185b);
}

/* 导入区 */
.import-section {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  border: 1rpx solid #e9ecef;
  padding: 16rpx;
  margin-bottom: 24rpx;
}

.import-textarea {
  width: 96vw;
  max-width: 96vw;
  display: block;
  margin: 0 auto;
  min-height: 220rpx;
  font-size: 24rpx;
  color: #333;
  border: 1rpx solid #e1e5e9;
  border-radius: 8rpx;
  padding: 12rpx;
  box-sizing: border-box;
}

.result-section {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  border: 1rpx solid #e9ecef;
  padding: 16rpx;
}

.result-textarea {
  width: 96vw;
  max-width: 96vw;
  display: block;
  margin: 0 auto;
  min-height: 600rpx;
  font-size: 24rpx;
  color: #333;
  border: 1rpx solid #e1e5e9;
  border-radius: 8rpx;
  padding: 12rpx;
  box-sizing: border-box;
}

.result-meta {
  margin-top: 12rpx;
  color: #666;
  font-size: 22rpx;
  text-align: right;
} 
