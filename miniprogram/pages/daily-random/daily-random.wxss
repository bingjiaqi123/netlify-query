.container {
  padding: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
  box-sizing: border-box;
  padding-top: 100rpx; /* 为固定顶部区域留出空间 */
}

/* 标题行样式 */
.title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 24rpx;
  margin-top: 90rpx; /* 从110rpx改为90rpx，上移20rpx */
  gap: 16rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  text-align: center;
  flex: 1;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.back-btn {
  background: #007aff;
  color: #fff;
  border: none;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  font-size: 36rpx;
  min-height: 80rpx;
  flex-shrink: 0;
}



/* 固定在顶部的添加组区域样式 */
.fixed-add-group-section {
  position: fixed;
  top: 60rpx; /* 从100rpx上移到60rpx */
  left: 0;
  right: 0;
  z-index: 1000;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.fixed-add-group-section .add-group-row {
  display: flex;
  gap: 16rpx;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 20rpx;
  backdrop-filter: blur(10rpx);
}

.top-header {
  height: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: flex-start;
  padding: 24rpx 24rpx 0 24rpx;
}

/* 添加新组区域样式 */
.add-group-section {
  margin: 20rpx 10rpx 30rpx 10rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
}

.add-group-row {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.group-name-input {
  flex: 1;
  height: 60rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: rgba(255, 255, 255, 0.9);
  color: #333;
  box-sizing: border-box;
}

.group-name-input::placeholder {
  color: #999;
}

.add-group-btn {
  background: linear-gradient(135deg, #4caf50 0%, #45a049 100%);
  color: white;
  width: 130rpx !important;
  border: none;
  border-radius: 12rpx;
  padding: 0 !important;
  height: 60rpx;
  font-size: 26rpx;
  font-weight: bold !important;
  cursor: pointer;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  box-sizing: border-box;
  flex-shrink: 0 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

.add-group-btn:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(76, 175, 80, 0.3);
}

.group-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 0 0 40rpx 0;
}

.group-block {
  background: linear-gradient(135deg, #74b9ff 0%, #fd79a8 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx 10rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  border: 3rpx solid #8b5cf6;
  transition: all 0.3s;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

.group-block:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.15);
}

.group-block.preset {
  opacity: 0.7;
  background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
  border: 1rpx solid #d0d0d0;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.03);
}

.group-header {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.group-name-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.group-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.group-actions {
  display: flex;
  gap: 12rpx;
}

.draw-count {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: nowrap;
}

.draw-count text {
  font-size: 28rpx;
  color: #666;
  white-space: nowrap;
}

.draw-input {
  width: 120rpx;
  padding: 12rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  font-size: 26rpx;
  text-align: center;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.task-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #e9ecef;
  transition: all 0.3s;
  position: relative;
}

.task-card:hover {
  transform: translateY(-1rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.task-card.preset {
  opacity: 0.7;
  background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
  border: 1rpx solid #d0d0d0;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.03);
}

.task-content {
  flex: 1;
}

.task-header-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.task-card.preset .task-title {
  color: #757575 !important;
}

.task-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.task-card.preset .task-desc {
  color: #9e9e9e !important;
}

.task-rewards {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.reward {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.reward.coin {
  color: #ff9800;
  background: #fff3e0;
}

.reward.diamond {
  color: #2196f3;
  background: #e3f2fd;
}

.reward.custom {
  color: #4caf50;
  background: #e8f5e8;
}

.reward-icon {
  width: 20rpx;
  height: 20rpx;
  flex-shrink: 0;
}

.task-actions {
  display: flex;
  gap: 8rpx;
  justify-content: flex-end;
  margin-left: 16rpx;
}

.edit-group-btn, .delete-group-btn, .edit-btn, .delete-btn {
  width: 50rpx !important;
  height: 50rpx !important;
  min-width: 50rpx !important;
  min-height: 50rpx !important;
  max-width: 50rpx !important;
  max-height: 50rpx !important;
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  cursor: pointer;
  transition: all 0.2s;
  flex-shrink: 0;
  flex-grow: 0;
}

.edit-group-btn, .edit-btn {
  background: #e3f2fd;
  color: #1976d2;
}

.edit-group-btn:active, .edit-btn:active {
  background: #bbdefb;
  transform: scale(0.95);
}

.delete-group-btn, .delete-btn {
  background: #ffebee;
  color: #d32f2f;
}

.delete-group-btn:active, .delete-btn:active {
  background: #ffcdd2;
  transform: scale(0.95);
}

/* 发布任务面板 */
.publish-panel{position:fixed;top:0;left:0;right:0;bottom:0;background:rgba(0,0,0,0.5);z-index:3000;display:flex;align-items:center;justify-content:center;opacity:0;visibility:hidden;transition:all 0.3s}
.publish-panel.show{opacity:1;visibility:visible}

.panel-content{background:#fff;border-radius:16rpx;width:98%;max-width:800rpx;height:85vh;overflow:hidden;box-shadow:0 8rpx 32rpx rgba(0,0,0,0.2);display:flex;flex-direction:column;position:relative;z-index:3001}

/* 头部按钮保证可点击 */
.header-actions .cancel-btn,.header-actions .publish-btn{pointer-events:auto}

/* 防止背景滚动抖动（与 wxml 的 catchtouchmove 配合）*/
body, page{overscroll-behavior:none}

.panel-header{display:flex;justify-content:space-between;align-items:center;padding:40rpx;border-bottom:2rpx solid #f0f0f0}
.panel-title{font-size:32rpx;font-weight:600;color:#333}
.header-actions{display:flex;gap:16rpx;align-items:center}

.input-group{padding:40rpx}
.panel-content .input-group{flex:1;min-height:0;overflow-y:auto;padding:40rpx}

.input-section {
  margin-bottom: 8rpx;
}

.section-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 6rpx;
  display: block;
}
.title-input{width:100%;height:72rpx;border:2rpx solid #e0e0e0;border-radius:8rpx;padding:0 20rpx;font-size:28rpx;background:#fff;box-sizing:border-box}
.title-input::placeholder{color:#999}
.desc-textarea {
  width: 100%;
  min-height: 120rpx;
  max-height: 120rpx;
  padding: 12rpx 16rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.4;
  resize: none;
  overflow-y: auto;
  box-sizing: border-box;
  background-color: #fff;
}
.desc-textarea::placeholder{color:#999}

/* 奖励设置样式 */
.reward-title-row{margin-bottom:8rpx}
.reward-title{font-size:28rpx;font-weight:600;color:#333;display:block}
.reward-setting-row{display:flex;align-items:center;gap:12rpx;margin-bottom:8rpx;padding:8rpx 0}
.reward-icon{width:32rpx;height:32rpx;flex-shrink:0}
.reward-label{font-size:26rpx;color:#333;width:120rpx;text-align:left}
.check-box{width:32rpx;height:32rpx;border:2rpx solid #666;border-radius:4rpx;margin-right:8rpx;display:flex;align-items:center;justify-content:center;cursor:pointer;flex-shrink:0;background:#fff}
.check-box.checked{border-color:#4caf50;background:#e8f5e9}
.check-box .tick{font-size:22rpx;color:#4caf50;line-height:1}
.reward-number-input{width:100rpx !important;height:30rpx !important;border:2rpx solid #e0e0e0;border-radius:4rpx;padding:0 8rpx;font-size:20rpx;text-align:center;background:#fff;flex:none !important}
.reward-number-input::placeholder{color:#999}
.reward-btn{width:30rpx;height:30rpx;background:#f0f0f0;color:#333;border:none;border-radius:50%;font-size:16rpx;font-weight:bold;display:flex;align-items:center;justify-content:center;flex-shrink:0;padding:0;margin:0;box-sizing:border-box;min-width:30rpx;min-height:30rpx;max-width:30rpx;max-height:30rpx}
.reward-btn:active{background:#e0e0e0}
.custom-input-section{margin-top:16rpx;margin-left:40rpx}
.custom-textarea{width:100%;height:96rpx;border:2rpx solid #e0e0e0;border-radius:6rpx;padding:12rpx;font-size:24rpx;line-height:36rpx;background:#fff;resize:none;box-sizing:border-box;overflow-y:auto}
.custom-textarea::placeholder{color:#999}

.cancel-btn{width:120rpx !important;height:60rpx;background:#f5f5f5;color:#666;border:none;border-radius:8rpx;font-size:20rpx;font-weight:500;flex:none !important;display:flex;align-items:center;justify-content:center;letter-spacing:0;white-space:nowrap}
.publish-btn{width:140rpx !important;height:60rpx;background:linear-gradient(135deg,#007bff,#0056b3);color:#fff;border:none;border-radius:8rpx;font-size:20rpx;font-weight:500;flex:none !important;display:flex;align-items:center;justify-content:center;letter-spacing:0;white-space:nowrap}
.cancel-btn:active,.publish-btn:active{transform:scale(0.98)}

/* 组ID输入框 */
.group-id-input {
  width: 30px;
  height: 40px;
  padding: 8px 12px;
  border: 1px solid #ddd;
  border-radius: 6px;
  font-size: 16px;
  text-align: center;
  font-weight: bold;
  box-sizing: border-box;
  margin-right: 10px;
}

/* 组ID显示 */
.group-id {
  font-size: 24px;
  font-weight: bold;
  color: #dc3545;
  margin-right: 10px;
}

/* 组名和ID行 */
.group-id-name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8px;
}

/* 组信息行 */
.group-info-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 15px;
  padding: 8px 0;
  border-bottom: 1px solid #eee;
}

/* 组描述 */
.group-description {
  font-size: 14px;
  color: #666;
  font-style: italic;
  flex: 1;
  margin-left: 10px;
}


 