.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 24rpx;
  padding-top: 80rpx;
  box-sizing: border-box;
  overflow-x: hidden;
}

/* 顶部安全区域和返回按钮 */
.safe-header {
  height: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: flex-start;
}

.back-btn {
  position: fixed;
  top: 80rpx;
  left: 24rpx;
  background: #007aff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  z-index: 100;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
  margin-top: 0;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.generals-list {
  flex: 1;
  margin-bottom: 120rpx;
  overflow-x: hidden;
}

.general-card {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
  flex-wrap: wrap;
  overflow: hidden;
  transition: box-shadow 0.2s, border 0.2s;
}

.general-card.selected {
  border: 3rpx solid #ffd700;
  box-shadow: 0 0 16rpx 4rpx #ffd70044;
}

.general-avatar {
  position: relative;
  flex-shrink: 0;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #ff6b6b, #feca57);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.rarity-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: #ff6b6b;
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  font-weight: bold;
}

.general-info {
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

.general-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.general-details {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.general-force {
  font-size: 24rpx;
  font-weight: 500;
  background: #fff;
  border-radius: 16rpx;
  padding: 2rpx 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
  border: 1rpx solid rgba(0,0,0,0.04);
  margin-right: 4rpx;
}

.general-role {
  font-size: 24rpx;
  font-weight: 500;
}

.separator {
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
}

.general-level {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
}

.bottom-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.confirm-button {
  background: linear-gradient(135deg, #ffd700, #ffe066);
  color: #333;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx;
  width: 100%;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}
.confirm-button:disabled {
  background: #eee;
  color: #aaa;
}

.back-button {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx;
  width: 100%;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.back-button:active {
  transform: scale(0.98);
} 

.general-skills {
  margin-top: 8rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.skill-text {
  font-size: 24rpx;
  color: #666;
  background: #f0f0f0;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  white-space: nowrap;
} 
