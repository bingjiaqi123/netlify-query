.history-container{padding:24rpx;padding-top:80rpx}
.top-row{display:flex;justify-content:space-between;align-items:center;margin-bottom:20rpx}
.back-btn{background:#007aff;color:#fff;border:none;border-radius:16rpx;padding:16rpx 24rpx;font-size:36rpx;min-height:80rpx}
.parent-btn{width:160rpx;height:100rpx;font-size:36rpx;color:#333;background:#ffd54f;border:none;padding:16rpx 24rpx;border-radius:16rpx;display:flex;align-items:center;justify-content:center}
.parent-btn.active{background:#007aff;color:#fff}

.mode-title{font-size:32rpx;font-weight:bold;color:#333;text-align:center;margin-bottom:20rpx}

/* 标签页样式 */
.tab-container{display:flex;background:#f5f5f5;border-radius:16rpx;padding:8rpx;margin-bottom:20rpx}
.tab-item{flex:1;text-align:center;padding:16rpx;border-radius:12rpx;transition:all 0.3s ease}
.tab-item.active{background:#fff;box-shadow:0 2rpx 8rpx rgba(0,0,0,0.1)}
.tab-text{font-size:28rpx;color:#333;font-weight:500}
.tab-item.active .tab-text{color:#007aff;font-weight:600}

.tab-content{min-height:200rpx}

.record{margin-bottom:16rpx;border-radius:12rpx;overflow:hidden;box-shadow:0 2rpx 8rpx rgba(0,0,0,0.1)}

/* 统一颜色方案：成就用金色渐变，任务用紫色渐变 */
.record.type-achieve{background:linear-gradient(135deg,#fff3e0,#f1f8e9)}
.record.type-daily{background:linear-gradient(135deg,#e3f2fd,#f3e5f5)}
.record.type-weekly{background:linear-gradient(135deg,#e3f2fd,#f3e5f5)}
.record.type-event{background:linear-gradient(135deg,#e3f2fd,#f3e5f5)}

.record-header{display:flex;justify-content:space-between;align-items:center;padding:16rpx;background:rgba(255,255,255,0.8);flex-wrap:wrap;gap:8rpx}
.task-id{font-size:22rpx;color:#666;background:#f5f5f5;padding:4rpx 8rpx;border-radius:8rpx;flex-shrink:0}
.task-title{font-size:28rpx;font-weight:600;color:#333;flex:1;min-width:0}
.task-score{font-size:24rpx;color:#ff6b35;font-weight:bold;background:#fff3e0;padding:4rpx 12rpx;border-radius:12rpx;flex-shrink:0}
.task-status{font-size:22rpx;padding:4rpx 12rpx;border-radius:12rpx;color:#fff;flex-shrink:0}
.task-status.published{background:#6c757d}
.task-status.ongoing{background:#2196f3}
.task-status.pending{background:#ff9800}
.task-status.approved{background:#4caf50}
.task-status.rejected{background:#f44336}

.record-details{padding:16rpx}
.detail-row{display:flex;margin-bottom:8rpx;align-items:flex-start}
.detail-row:last-child{margin-bottom:0}
.label{font-size:24rpx;color:#666;min-width:140rpx;flex-shrink:0}
.value{font-size:24rpx;color:#333;flex:1}

.score.high{color:#4caf50;font-weight:bold}
.score.medium{color:#ff9800;font-weight:bold}
.score.low{color:#f44336;font-weight:bold}

.rewards{display:flex;gap:8rpx;flex-wrap:wrap}
.reward{font-size:20rpx;padding:4rpx 8rpx;border-radius:4rpx}
.reward.coin{color:#ff9800;background:#fff3e0}
.reward.diamond{color:#2196f3;background:#e3f2fd}
.reward.custom{color:#4caf50;background:#e8f5e8}
.reward{display:flex;align-items:center;gap:4rpx}
.reward-icon{width:20rpx;height:20rpx;flex-shrink:0}

.empty{text-align:center;color:#999;margin-top:40rpx;font-size:28rpx} 