  background: linear-gradient(135deg, #9c27b0 0%, #ba68c8 100%);
  color: white;
  border: 1rpx solid #7b1fa2;
}

.reward-icon {
  width: 24rpx;
  height: 24rpx;
}



/* 空状态提示 */
.empty-tip {
  text-align: center;
  color: #9e9e9e;
  font-size: 26rpx;
  padding: 40rpx 20rpx;
  font-style: italic;
} 

/* 任务池中的奖励标签样式 */
.pool-task .reward, .permanent-task .reward {
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.pool-task .reward.coin, .permanent-task .reward.coin {
  color: #ff9800;
  background: #fff3e0;
}

.pool-task .reward.diamond, .permanent-task .reward.diamond {
  color: #2196f3;
  background: #e3f2fd;
}

.pool-task .reward.custom, .permanent-task .reward.custom {
  color: #4caf50;
  background: #e8f5e8;
}

.pool-task .reward-icon, .permanent-task .reward-icon {
  width: 20rpx;
  height: 20rpx;
  flex-shrink: 0;
} 

/* 常驻任务池预设任务置底灰暗样式 */
.permanent-task.preset {
  opacity: 0.7;
  background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
  border: 1rpx solid #d0d0d0;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.03);
}

.permanent-task.preset .task-title {
  color: #757575 !important;
}

.permanent-task.preset .task-desc {
  color: #9e9e9e !important;
}

/* 任务池中的编辑删除按钮样式 */
.task-actions {
  display: flex;
  gap: 8rpx;
  padding: 8rpx 12rpx;
  justify-content: flex-end;
}

.edit-btn, .delete-btn {
  width: 40rpx;
  height: 40rpx;
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  cursor: pointer;
  transition: all 0.2s;
}

.edit-btn {
  background: #e3f2fd;
  color: #1976d2;
}

.edit-btn:active {
  background: #bbdefb;
  transform: scale(0.95);
}

.delete-btn {
  background: #ffebee;
  color: #d32f2f;
}

.delete-btn:active {
  background: #ffcdd2;
  transform: scale(0.95);
} 

/* 任务池选择器样式 */
.pool-selector {
  margin-top: 30rpx;
}

.pool-tabs {
  display: flex;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 4rpx;
  margin-bottom: 24rpx;
}

.pool-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  cursor: pointer;
  transition: all 0.2s;
}

.pool-tab.active {
  background: white;
  color: #333;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.pool-tab:active {
  transform: scale(0.98);
}

.pool-content {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #e9ecef;
}

.pool-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.pool-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.manage-pool-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  font-size: 26rpx;
  cursor: pointer;
  transition: all 0.2s;
}

.manage-pool-btn:active {
  transform: scale(0.95);
}

.pool-preview {
  text-align: center;
  padding: 40rpx 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx dashed #dee2e6;
}

.preview-text {
  font-size: 26rpx;
  color: #6c757d;
} 

/* 输入提示文字 */
.input-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  font-style: italic;
}

/* 禁用状态样式 */
.title-input.disabled,
.reward-number-input.disabled {
  background-color: #f5f5f5 !important;
  color: #666 !important;
  border-color: #ccc !important;
  cursor: not-allowed;
}

.title-input.disabled::placeholder,
.reward-number-input.disabled::placeholder {
  color: #999 !important;
} 

/* 活动任务信息展示区域 */
.activity-task-info {
  background-color: #f8f9fa;
  border-radius: 8px;
  padding: 12px;
  margin-bottom: 15px;
  border-left: 4px solid #007aff;
}

.info-section {
  display: flex;
  align-items: center;
  margin-bottom: 6px;
}

.info-section:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 14px;
  color: #666;
  min-width: 80px;
  font-weight: 500;
}

.info-value {
  font-size: 14px;
  color: #333;
  font-weight: 600;
  flex: 1;
}

.coin-value {
  color: #f39c12;
}

.diamond-value {
  color: #9b59b6;
} 

/* 每日任务信息展示区域 */
.daily-task-info {
  background-color: #f8f9fa;
  border-radius: 8px;
  padding: 12px;
  margin-bottom: 15px;
  border-left: 4px solid #28a745;
}

/* 每周任务信息展示区域 */
.weekly-task-info {
  background-color: #f8f9fa;
  border-radius: 8px;
  padding: 12px;
  margin-bottom: 15px;
  border-left: 4px solid #17a2b8;
} 

/* ID输入和开关行布局 */
.id-switch-row {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 8rpx;
}

.id-input-group {
  flex: 1;
}

.switch-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 120rpx;
}

.switch-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  text-align: center;
}

/* 自定义开关样式 */
.custom-switch {
  display: flex;
  background-color: #f0f0f0;
  border-radius: 20rpx;
  padding: 4rpx;
  border: 2rpx solid #ddd;
  min-width: 120rpx;
}

.switch-option {
  flex: 1;
  text-align: center;
  padding: 8rpx 12rpx;
  font-size: 24rpx;
  color: #666;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.switch-option.active {
  background-color: #007aff;
  color: white;
  box-shadow: 0 2rpx 4rpx rgba(0, 122, 255, 0.3);
} 

 