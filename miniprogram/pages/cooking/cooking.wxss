/* pages/cooking/cooking.wxss */

.container {
  padding: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部标题和返回按钮 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  margin-top: 60rpx;
  gap: 16rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  text-align: center;
  flex: 1;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.back-btn {
  background: #007aff;
  color: #fff;
  border: none;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  font-size: 36rpx;
  min-height: 80rpx;
  flex-shrink: 0;
}

/* 顶部功能按钮 */
.top-buttons {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  margin-top: 20rpx;
}

.top-btn {
  flex: 1;
  background: rgba(255, 255, 255, 0.9);
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
}

.top-btn:active {
  transform: scale(0.95);
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
}

/* 食谱显示区 */
.recipe-section {
  flex: 1;
  padding: 24rpx;
  margin-top: 20rpx;
}

.recipe-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.recipe-header {
  margin-bottom: 24rpx;
}

.recipe-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.recipe-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.category-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.category-label {
  font-size: 24rpx;
  color: #1976d2;
  background: #e3f2fd;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

.subcategory-label {
  font-size: 22rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.recipe-tags {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.tag {
  background: #e3f2fd;
  color: #1976d2;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
}

.taste-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.taste-label {
  font-size: 24rpx;
  color: #666;
}

.taste-value {
  font-size: 24rpx;
  color: #ff6b35;
  font-weight: 600;
  background: #fff3e0;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

/* 原料部分 */
.recipe-ingredients {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.ingredient-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.ingredient-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 16rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.ingredient-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.ingredient-amount {
  font-size: 24rpx;
  color: #666;
  margin-right: 16rpx;
}

.availability {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.availability.available {
  background: #4caf50;
}

.availability.unavailable {
  background: #f44336;
}

.status-text {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

/* 配料部分 */
.recipe-seasonings {
  margin-bottom: 24rpx;
}

.seasoning-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.seasoning-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 12rpx;
  background: #fff3e0;
  border-radius: 8rpx;
  border: 1rpx solid #ffcc02;
}

.seasoning-name {
  font-size: 24rpx;
  color: #e65100;
}

.seasoning-amount {
  font-size: 20rpx;
  color: #ff8f00;
  font-weight: 500;
}

/* 制作步骤 */
.recipe-steps {
  margin-bottom: 32rpx;
}

.step-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.step-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 12rpx 16rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.step-number {
  font-size: 24rpx;
  font-weight: bold;
  color: #007aff;
  min-width: 40rpx;
}

.step-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  flex: 1;
}

/* 操作按钮 */
.recipe-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.cook-btn {
  background: #4caf50;
  color: white;
}

.cook-btn:disabled {
  background: #ccc;
  color: #999;
}

.next-btn {
  background: #2196f3;
  color: white;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-text {
  font-size: 28rpx;
  font-weight: 600;
}

/* 无食谱状态 */
.no-recipe {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.no-recipe-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.no-recipe-hint {
  font-size: 24rpx;
  color: #999;
} 