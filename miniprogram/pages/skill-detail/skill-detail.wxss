/* pages/skill-detail/skill-detail.wxss */
.skill-detail-container {
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 顶部安全区域和返回按钮 */
.safe-header {
  height: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: flex-start;
}

.back-btn {
  position: fixed;
  top: 80rpx;
  left: 24rpx;
  background: #007aff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  z-index: 100;
}

.skill-header {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.skill-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.skill-type {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.skill-type.normal {
  background: linear-gradient(45deg, #4CAF50, #45a049);
  color: #ffffff;
}

.skill-type.awaken {
  background: linear-gradient(45deg, #FF9800, #F57C00);
  color: #ffffff;
}

.skill-description {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.skill-description text {
  font-size: 32rpx;
  color: #666;
  line-height: 1.6;
}

.skill-levels {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.levels-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.level-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.level-item {
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
  transition: all 0.3s ease;
}

.level-item.current {
  border-color: #4CAF50;
  background: linear-gradient(135deg, #e8f5e8, #f1f8e9);
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.2);
}

.level-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.level-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.level-status {
  font-size: 24rpx;
  color: #4CAF50;
  font-weight: bold;
}

.level-effect {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.skill-upgrade {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.upgrade-btn {
  background: linear-gradient(45deg, #4CAF50, #45a049);
  color: #ffffff;
  border: none;
  border-radius: 15rpx;
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.upgrade-btn[disabled] {
  background: #ccc;
  color: #999;
}

.upgrade-cost {
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.back-section {
  margin-top: 20rpx;
}

.back-btn {
  width: 100%;
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: #ffffff;
  border: none;
  border-radius: 15rpx;
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
} 
