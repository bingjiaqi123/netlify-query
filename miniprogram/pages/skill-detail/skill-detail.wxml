<!--pages/skill-detail/skill-detail.wxml-->
<view class="skill-detail-container">
  <!-- 顶部安全区域和返回按钮 -->
  <view class="safe-header">
    <button class="back-btn" bindtap="goBack">返回</button>
  </view>

  <!-- 技能头部信息 -->
  <view class="skill-header">
    <view class="skill-name">{{skill.name}}</view>
    <view class="skill-type {{skill.type}}">
      {{skill.type === 'normal' ? '普通技能' : '觉醒技能'}}
    </view>
  </view>

  <!-- 技能描述 -->
  <view class="skill-description">
    <text>{{skill.description}}</text>
  </view>

  <!-- 技能等级列表 -->
  <view class="skill-levels">
    <view class="levels-title">技能等级效果</view>
    <view class="level-list">
      <view 
        class="level-item {{index === skill.currentLevel ? 'current' : ''}}"
        wx:for="{{skill.levels}}" 
        wx:key="level"
      >
        <view class="level-header">
          <text class="level-number">Lv.{{item.level}}</text>
          <text class="level-status" wx:if="{{index === skill.currentLevel}}">当前等级</text>
        </view>
        <view class="level-effect">{{item.effect}}</view>
      </view>
    </view>
  </view>

  <!-- 技能升级按钮 -->
  <view class="skill-upgrade" wx:if="{{skill.currentLevel < skill.levels.length - 1}}">
    <button 
      class="upgrade-btn" 
      bindtap="upgradeSkill"
      disabled="{{!canUpgrade}}"
    >
      {{canUpgrade ? '升级技能' : '需要更多经验'}}
    </button>
    <view class="upgrade-cost" wx:if="{{canUpgrade}}">
      升级消耗: {{upgradeCost}} 经验
    </view>
  </view>
</view> 