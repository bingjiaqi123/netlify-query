<view class="mimic-selector-overlay" wx:if="{{visible}}">
  <view class="mimic-selector-container">
    <view class="mimic-selector-header">
      <text class="mimic-selector-title">选择要模仿的小丑牌</text>
      <text class="mimic-selector-subtitle">模仿者将在下回合变成选中的小丑牌</text>
    </view>
    
    <view class="joker-grid">
      <view 
        class="joker-card {{selectedJokerId === joker.id ? 'selected' : ''}}" 
        wx:for="{{availableJokers}}" 
        wx:key="id"
        wx:for-item="joker"
        bindtap="selectJoker"
        data-joker-id="{{joker.id}}"
      >
        <view class="joker-card-header" style="background-color: {{joker.backgroundColor}};">
          <view class="joker-name-row">
            <text class="joker-name" style="color: {{joker.textColor}};">{{joker.name}}</text>
            <text class="joker-category" style="color: {{joker.textColor}};">{{joker.category}}</text>
          </view>
        </view>
        <view class="joker-card-body">
          <text class="joker-effect">{{joker.effect}}</text>
        </view>
      </view>
    </view>
    
    <view class="mimic-selector-actions">
      <button class="confirm-btn" bindtap="confirmSelection" disabled="{{!selectedJokerId}}">确认选择</button>
      <button class="cancel-btn" bindtap="cancelSelection">取消</button>
    </view>
  </view>
</view> 